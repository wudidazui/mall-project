<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangtao.mall.dao.PmsProductCategoryDao">
    <resultMap id="listWithChildrenMap" type="com.wangtao.mall.dto.PmsProductCategoryWithChildrenItem"
        extends="com.wangtao.mall.mapper.PmsProductCategoryMapper.BaseResultMap">
        <collection property="children" resultMap="com.wangtao.mall.mapper.PmsProductCategoryMapper.BaseResultMap" columnPrefix="child_">
        </collection>
    </resultMap>

    <select id="listWithChildren" resultMap="listWithChildrenMap">
        SELECT c1.id,c1.name,c2.id child_id,c2.name child_name
        FROM pms_product_category c1
        LEFT JOIN pms_product_category c2 ON c1.id = c2.parent_id WHERE c1.parent_id = 0
    </select>

</mapper>
